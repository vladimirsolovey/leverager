@model Leverager.Models.Category

@{
    ViewBag.Title = "Edit Category";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>EditCategory</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Category</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Root)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Root)
            @Html.ValidationMessageFor(model => model.Root)
        </div>

        <p>
            <input type="submit" value="Save" class="button blue rounded average"  />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "ShowCategory")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
